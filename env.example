# TempoExpenseAI Configuration
# Copy this to .env and fill in your values

# Stellar/Tempo Network
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_SECRET_KEY=your_stellar_secret_key_here
STELLAR_PUBLIC_KEY=your_stellar_public_key_here

# Stablecoin Asset (Tempo EURT or test asset)
STABLECOIN_CODE=USDC
STABLECOIN_ISSUER=your_issuer_public_key_here

# AI Agent Config
RISK_THRESHOLD_AUTO_APPROVE=0.3
RISK_THRESHOLD_AUTO_REJECT=0.7
MAX_AUTO_APPROVE_AMOUNT=500.0

# App Config
DATABASE_URL=sqlite:///./tempoexpense.db
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

